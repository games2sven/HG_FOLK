<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="240dp"
        android:layout_height="186dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_take_off"
        >




        <View
            android:id="@+id/v_scale_anim"
            android:layout_width="95dp"
            android:layout_height="73.5dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_take_off_center_anim"
            />

        <TextView
            android:id="@+id/tv_take_off"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_centerInParent="true"
            android:textColor="#FF040208"
            android:textSize="17sp"
            android:textStyle="bold"
            android:text="@string/text_take_off"
            android:gravity="center"
            android:background="@drawable/bg_take_off_center"

            />

        
    </RelativeLayout>

    <ImageView
        android:padding="5dp"
        android:layout_alignRight="@id/rl_top"
        android:layout_alignTop="@id/rl_top"
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/camera_back"
        />


    <TextView
        android:id="@+id/tv_dialog_tip"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rl_top"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_take_off_tip"
        android:textColor="@color/white"
        android:textSize="10sp"
        />



</RelativeLayout>