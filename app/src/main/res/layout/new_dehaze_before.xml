<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_new_handle_pic"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.highgreat.education.widget.HackyViewPager
        android:id="@+id/han_pic_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:scaleType="center" />

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:background="@color/skin_photos_lib">

        <ImageView
            android:id="@+id/hand_act_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="12dp"
            android:src="@mipmap/mt_guanbi"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <!--<ImageButton-->
                <!--android:id="@+id/face"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:padding="12dp"-->
                <!--android:src="@mipmap/mt_zhaopian_shensuan"-->
                <!--android:background="@null"-->
                <!--android:visibility="visible"-->
                <!--android:onClick="faceOnclick"/>-->

            <ImageButton
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@mipmap/mt_fengxiang"
                android:background="@null"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:src="@mipmap/mt_shanchu"
                android:visibility="gone"
                android:background="@null"/>


        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>